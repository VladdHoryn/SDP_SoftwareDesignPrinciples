<Window x:Class="Ex_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ex_1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="TextBox" HorizontalAlignment="Center" VerticalAlignment="Top" Width="100" Height="20" Background="Azure"></TextBox>
        <Button Click="Button_click" Content="Click Me" Background="Bisque" Cursor="Hand" Width="100" Height="20" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0, 40, 0, 0"></Button>
        <Label HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0, 80, 0, 0" Content="Result:"></Label>
        <Label x:Name="Label" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0, 100, 0, 0"></Label>
    </Grid>
</Window>
